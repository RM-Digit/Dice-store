.crowdcontrol {
  display: inline-block;
  width: 100%;

  .container {
    max-width: 1170px;
    margin: 0 auto;
	@include at-query ($max, '767px') {
	  width: 100%;
	  padding: 0 15px;
	}
  }

  .btn,
  button,
  input[type="button"],
  input[type="submit"] {
	display: inline-block;
	padding: 6px 15px;
	margin-bottom: 0;
	font-size: 14px;
	font-weight: normal;
	line-height: 1.42857143;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	-ms-touch-action: manipulation;
	touch-action: manipulation;
	cursor: pointer;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;	
	background: {{settings.crwdctrl_btn_bg_b}};
	border: 1px solid {{settings.crwdctrl_btn_border_color_b}};
	border-radius: {%if settings.crwdctrl_btn_border_radius_b%}{{settings.crwdctrl_btn_border_radius_b}}{%else%}0{%endif%};
	color: {{settings.crwdctrl_btn_text_color_b}};
	height: auto;
	&:focus {
	  filter: alpha(opacity=100);
      -webkit-box-shadow: none;
      box-shadow: none;
      opacity: 1;
	}
	&.disabled, &.disable,
    &[disabled] {
      cursor: not-allowed;
      filter: alpha(opacity=65);
      -webkit-box-shadow: none;
      box-shadow: none;
      opacity: .65;
    }
  }
  
  .qtyplus, input[type="button"].qtyplus,
  .qtyminus, input[type="button"].qtyminus {
	background: #ffffff;
	border: 1px solid #888888;
	border-radius: 0;
	float: left;
	padding: 5px 0;
	height: 32px;
	width: 20px;
	margin: 0;
	border-radius: 0;
	color: #000;
  }
  .pqty {
	.qty {
	  background: #fff none repeat scroll 0 0;
	  border-bottom: 1px solid #888888;
	  border-radius: 0;
	  border-top: 1px solid #888888;
	  float: left;
	  text-align: center;
	  padding: 5px 10px;
	  margin: 0;
	  height: 32px;
      width: 50px;
	}
  }
}
