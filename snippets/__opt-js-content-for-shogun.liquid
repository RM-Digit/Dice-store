		{%- if id != '' -%}
			{%- capture __url -%}{{ shogun_url }}{{ id }}.js{%- endcapture -%}
			{%- if content_for_layout contains __url -%}
			shogun_urls[{{ forloop.index0 }}] = '{{__url}}';
